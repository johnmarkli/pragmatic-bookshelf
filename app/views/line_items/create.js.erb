// Only show cart if not empty
if ($('#cart tr').length == 1) { $('#cart').show('blind', 1000); }

// Template to replace content of element whose id="cart" with that HTML
$('#cart').html("<%=j render @cart %>");

// When new line item is created, highlight to show it is added
$('#current_item').css({'background-color':'#88ff88'}).animate({'background-color':'#114411'}, 1000);
